<% include ../partials/header %>

<section>
  <div>
    <a href="/surveys/new">New Survey</a>
  </div>

  <div class="row">

      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= survey.title %>
            </h5>

            <p>
              Question 1: <%= survey.question1 %>
            </p>

            <p>
              Question 2: <%= survey.question2 %>
            </p>

            <p>
              Question 3: <%= survey.question3 %>
            </p>

            <p>
              Question 4: <%= survey.question4 %>
            </p>

            <div class="actions">
              <a href="/surveys/<%= survey.id %>" class="btn btn-primary">
                Answer Survey
              </a>

              <a href="/surveys/<%= survey.id %>/edit" class="btn btn-primary">
                Edit
              </a>

              <form action="/surveys/<%= survey.id %>/delete" method="post"  onsubmit="return confirm('Are you sure you want to delete this survey?');">
                <input type="hidden" name="id" value="<%= survey.id %>">
                <button type="submit" class="btn btn-danger">DELETE</button>
              </form>
            </div>
          </div>
        </div>
      </div>

  </div>
</section>

<% include ../partials/footer %>
